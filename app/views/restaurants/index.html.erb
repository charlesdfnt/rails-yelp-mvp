<div class= "container py-5">
  <div class="text-center mb-4">
    <h1 class="display-4">My Restaurants</h1>
  </div>

  <ul class="list-group mb-4">
    <% @restaurants.each do |restaurant| %>
      <li class="list-group-item"><%= link_to restaurant.name, restaurant_path(restaurant) %></li>
    <% end %>
  </ul>

  <div class="text-center">
    <%= link_to "Add a new restaurant", new_restaurant_path(@restaurant), class: "btn btn-primary"%>
  </div>
</div>
