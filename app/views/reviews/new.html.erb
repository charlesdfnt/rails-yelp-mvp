<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-sm rounded-4">
        <div class="card-body">
          <h2 class="card-title text-center mb-4">Add a new review</h2>

          <%= simple_form_for [@restaurant, @review] do |f| %>
            <div class="mb-3">
              <%= f.input :content, label: "content", input_html: { class: "form-control" } %>
            </div>
            <div class="mb-3">
              <%= f.input :rating, input_html: { class: "form-control" } %>
            </div>
            <div class="text-center">
              <%= f.button :submit, "Create", class: "btn btn-primary btn-lg w-100" %>
            </div>
          <% end %>
          <div class="text-center mt-4">
            <%= link_to "Back to all restaurants", restaurants_path, class: "btn btn-secondary w-50" %>
          </div>
        </div>
      </div>
    </div>
  </div>
